<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mapper.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nile.dao.AuthorDao">

    <resultMap id="authorResult" type="Author">
        <id column="author_id" property="id"/>
        <result column="author_name" property="name"/>
        <result column="author_profile" property="profile"/>
    </resultMap>

    <sql id="authorColumns">
        au.id as author_id,
        au.name as author_name,
        au.profile as author_profile
    </sql>

    <insert id="insertAuthor" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO author (id,name,profile) VALUES (
                #{id},#{name},#{profile}
        )
    </insert>
    <update id="updateAuthor">
        UPDATE author
        <set>
            <if test="name!=null">
                name=#{name},
            </if>
            <if test="profile!=null">
                profile=#{profile}
            </if>
        </set>
        where id=#{id}

    </update>
    <delete id="deleteAuthor">
        DELETE FROM author where id=#{id}
    </delete>

    <select id="selectAuthorById" resultMap="com.nile.dao.BookDao.authorResult">
        SELECT
            <include refid="com.nile.dao.BookDao.authorColumns"/>
        FROM author au
        WHERE id=#{id}
    </select>
    <select id="selectAuthorAll" resultType="Author">
        SELECT
            <include refid="com.nile.dao.BookDao.authorColumns"/>
        FROM author
    </select>
    <select id="selectAuthorByName" resultType="Author">
        select
            <include refid="com.nile.dao.BookDao.authorColumns"/>
        from author au
        where name=#{name}
    </select>
</mapper>