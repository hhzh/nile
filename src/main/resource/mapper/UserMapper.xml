<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nile.dao.UserDao">

    <!--resultType是返回值类型，parameterType是传参类型，可以省略，mybatis能自动识别-->
    <select id="selectUserById" resultType="user" parameterType="int">
        SELECT id,name,phone,create_time,update_time FROM user where id=#{id}
    </select>

    <!--自动生成主键Id，如果插入数据后不立即用到Id，可以不用配置-->
    <insert id="insertUser" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO USER (name,phone) VALUES (#{name},#{phone})
    </insert>

    <update id="updateUser">
        UPDATE USER SET NAME = #{name},phone=#{phone} WHERE id=#{id}
    </update>

    <delete id="deleteUserById">
        DELETE FROM USER WHERE id=#{id}
    </delete>

</mapper>
